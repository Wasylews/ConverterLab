<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:id="@+id/organization_name"
            tools:text="Organization name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@android:color/black"/>

        <TextView android:id="@+id/organization_region"
            tools:text="Organization region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <TextView android:id="@+id/organization_city"
            tools:text="Organization city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <TextView android:id="@+id/organization_phone"
            tools:text="Tel: 000 00 000 00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end" />

        <TextView android:id="@+id/organization_location"
            tools:text="Address: Random st. 20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end" />

        <ToolBar android:id="@+id/card_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorToolBarItem"/>

    </LinearLayout>

</android.support.v7.widget.CardView>